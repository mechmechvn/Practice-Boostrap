<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h1>Add new product</h1>
        <%= form_for(@product) do |f| %>
          <table class="table table-striped table-condensed">
            <tr>
              <td><%= f.label :product %></td>
              <td><%= f.text_field :product, class: 'form-control', placeholder: 'Enter product\'s name' %></td>
            </tr>
            <tr>
              <td><%= f.label :code %></td>
              <td><%= f.text_field :code, class: 'form-control', placeholder: 'Enter code of product'%></td>
            </tr>
            <tr>
              <td><%= f.label :price %></td>
              <td><%= f.number_field :price, class: 'form-control', placeholder: 'Enter price' %></td>
            </tr>
            <tr>
              <td colspan="2"><%= f.submit class: 'btn btn-success pull-right'  %></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
